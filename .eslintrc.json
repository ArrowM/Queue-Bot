{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "ecmaVersion": 12
  },
  "root": true,
  "rules": {
    "no-unused-vars": "warn",
    "no-unused-expressions": "error",
    "no-undef": "off"
  },
  "overrides": [
    {
      "files": [
        "src/**/*.ts"
      ]
    }
  ]
}
